<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <title>Address book</title>
  </head>
  <body>
    <div class="container">
      <h1><center>Address book</center></h1>

          <form action= '/create_contact' method='post'>
            <div class="form-group">
              <label for="name">Full name</label>
              <input type="text" class="form-control" name='name' required>
            </div>
            <div class="form-group">
              <label for="address">Address</label>
              <input type="text" class="form-control" name="address" required>
            </div>
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input type="number" class="form-control" name="phone" required>
            </div>
            <button type="submit" class="btn">Add Contact</button>
          </form>
          <br>

          {% if list_of_contacts is not empty %}
           <h2>List of contacts:</h2>
           <ul>
               {% for key, contact in list_of_contacts %}
                 <form action= '/remove_contact' method='post'>
                   <h4><u>{{contact.getName}}</u></h4>
                   <li>{{contact.getAddress}}</li>
                   <li>{{contact.getPhone}}</li>
                   <input type="hidden" name="key" value={{key}}>
                   <button type="submit" class="btn btn-primary btn-sm">Remove contact</button>
                 </form>
               {%endfor%}
           </ul>
           <form action= '/delete_contacts' method='post'>
           <button type="submit" class="btn btn-danger">Delete ALL contacts</button>
           </form>
          {% endif %}
    </div>
  </body>
</html>
